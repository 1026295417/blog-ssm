<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybtis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.stackoverflow.blog.dao.SettingDao">

    <resultMap id="settingMap" type="setting">
        <id property="id" column="id"/>
        <result property="key" column="key"/>
        <result property="value" column="value"/>
    </resultMap>

    <select id="selectByPage" resultMap="settingMap" resultType="setting">
        select * from setting
        <where>
            <if test="searchMap != null">
                <if test="searchMap.key != null">
                    `key` = #{searchMap.key}
                </if>
                <if test="searchMap.value != null">
                    and value = #{searchMap.value}
                </if>
            </if>
        </where>
        limit #{start},#{limit}
    </select>

    <select id="selectByCondition" resultMap="settingMap" resultType="setting">
        select * from setting
        <where>
            <if test="key != null">
                `key` = #{key}
            </if>
            <if test="value != null">
                and value = #{value}
            </if>
        </where>
    </select>

    <select id="selectById" resultMap="settingMap" resultType="setting">
        select * from setting where id = #{id}
    </select>

    <insert id="insert" parameterType="rolePermission">
        insert into setting (id,key,value)
        values (#{id},#{key},#{value})
    </insert>

    <insert id="batchInsert" parameterType="list">
        insert into setting (id,key,value)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},#{item.key},#{item.value})
        </foreach>
    </insert>

    <delete id="deleteById" parameterType="string">
        delete from setting where id = #{id}
    </delete>

    <delete id="batchDeleteById" parameterType="list">
        delete from setting where id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="setting">
        update setting
        <set>
            <if test="key != null">
                `key` = #{key},
            </if>
            <if test="value != null">
                value = #{value},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="batchUpdate" parameterType="list">
        <foreach collection="list" item="item" open="begin" close=";end;" separator=";">
            update role_permission
            <set>
                <if test="item.key != null">
                    `key` = #{item.key},
                </if>
                <if test="item.value != null">
                    value = #{item.value},
                </if>
            </set>
            where id = #{item.id}
        </foreach>
    </update>


    <insert id="insertSetting" parameterType="setting">
        insert into setting(id,key,value) values(#{id},#{key},#{value})
    </insert>

    <select id="getAllSetting" resultType="setting" resultMap="settingMap">
        select * from setting
    </select>

    <select id="getSetting" parameterType="string" resultType="setting" resultMap="settingMap">
        select * from setting where `key` = #{key}
    </select>

    <update id="updateSetting" parameterType="setting">
        update setting set value = #{value} where `key` = #{key}
    </update>

</mapper>