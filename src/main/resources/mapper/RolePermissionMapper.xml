<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybtis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.stackoverflow.blog.dao.RolePermissionDao">

    <resultMap id="rolePermissionMap" type="rolePermission">
        <id property="id" column="id"></id>
        <result property="roleId" column="roleid"></result>
        <result property="permissionId" column="permissionid"></result>
    </resultMap>

    <select id="getRolePermissionByRoleId" resultType="rolePermission" resultMap="rolePermissionMap" parameterType="string">
        select * from role_permission where roleid = #{roleId}
    </select>

</mapper>