<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybtis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.stackoverflow.blog.dao.BlogDao">

    <resultMap id="blogMap" type="blog">
        <id property="id" column="id"></id>
        <result property="userId" column="userid"></result>
        <result property="title" column="title"></result>
        <result property="blogMd" column="blogmd"></result>
        <result property="blogHtml" column="bloghtml"></result>
        <result property="categoryId" column="categoryid"></result>
        <result property="date" column="date" jdbcType="TIMESTAMP" javaType="java.util.Date"></result>
        <result property="blogCode" column="blogcode"></result>
    </resultMap>

    <select id="getAllBlog" resultMap="blogMap">
        select * from blog order by date desc
    </select>

    <select id="getBlogById" resultMap="blogMap" parameterType="string">
        select * from blog where id = #{id}
    </select>

    <select id="getBlogByCode" resultMap="blogMap" parameterType="string">
        select * from blog where blogcode = #{blogCode}
    </select>

    <insert id="insertBlog" parameterType="blog" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into blog(id,userid,title,blogmd,bloghtml,categoryid,date,blogcode) values(#{id},#{userId},#{title},#{blogMd},#{blogHtml},#{categoryId},#{date},#{blogCode})
    </insert>

    <update id="updateBlog" parameterType="blog">
        update blog
        <set>
            <if test="title!=null">
                title = #{title},
            </if>
            <if test="blogmd!=null">
                blogmd = #{blogmd},
            </if>
            <if test="bloghtml!=null">
                bloghtml = #{bloghtml},
            </if>
            <if test="categoryid!=null">
                categoryid = #{categoryId},
            </if>
            <if test="blogcode!=null">
                blogcode = #{blogCode}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteBlogById" parameterType="string">
        delete from blog where id = #{id}
    </delete>

</mapper>